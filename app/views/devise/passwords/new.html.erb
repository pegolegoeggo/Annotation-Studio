<%= content_for :page_title, "Forgot your password?" %>
<div class="row">
  <div class="col-md-12">
    <%= devise_error_messages! %>

    <div class="page-header">
      <h1>Forgot your password?</h1>
    </div>

    <%= form_for(resource, :as =>
    resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form' }) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :class =>"form-control" %></div>

    <%= f.submit "Send password reset link", :class =>
    "btn btn-default btn btn-default-primary" %>
    <% end %></div>
  <!--/col-md-12 -->
</div>
<!--/row -->
